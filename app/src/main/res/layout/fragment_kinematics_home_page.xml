<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background_blue"
    tools:context=".KinematicsHomePage">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/kinematics_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kinematics"
        android:textColor="@color/home_title_blue"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vo:"
        android:textColor="@color/darkest_blue"
        android:textSize="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="v:"
        android:textColor="@color/darkest_blue"
        android:textSize="44dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/vo_textView"
        app:layout_constraintStart_toStartOf="@+id/vo_textView"
        app:layout_constraintTop_toBottomOf="@+id/vo_textView" />

    <TextView
        android:id="@+id/s_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="s:"
        android:textColor="@color/darkest_blue"
        android:textSize="44dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/v_textView"
        app:layout_constraintStart_toStartOf="@+id/v_textView"
        app:layout_constraintTop_toBottomOf="@+id/v_textView" />

    <TextView
        android:id="@+id/a_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="a:"
        android:textColor="@color/darkest_blue"
        android:textSize="44dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/s_textView"
        app:layout_constraintStart_toStartOf="@+id/s_textView"
        app:layout_constraintTop_toBottomOf="@+id/s_textView" />

    <TextView
        android:id="@+id/t_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="t:"
        android:textColor="@color/darkest_blue"
        android:textSize="44dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/a_textView"
        app:layout_constraintStart_toStartOf="@+id/a_textView"
        app:layout_constraintTop_toBottomOf="@+id/a_textView" />

    <EditText
        android:id="@+id/vo_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/vo_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vo_textView"
        app:layout_constraintTop_toTopOf="@+id/vo_textView" />

    <EditText
        android:id="@+id/v_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/v_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_textView"
        app:layout_constraintTop_toTopOf="@+id/v_textView" />

    <EditText
        android:id="@+id/s_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/s_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s_textView"
        app:layout_constraintTop_toTopOf="@+id/s_textView" />

    <EditText
        android:id="@+id/a_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/a_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a_textView"
        app:layout_constraintTop_toTopOf="@+id/a_textView" />

    <EditText
        android:id="@+id/t_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/t_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t_textView"
        app:layout_constraintTop_toTopOf="@+id/t_textView" />

    <Button
        android:id="@+id/kinematics_go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"
        android:textSize="24sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_editText" />

</androidx.constraintlayout.widget.ConstraintLayout>