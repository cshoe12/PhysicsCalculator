<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_background"
    tools:context=".AboutFragment">

    <TextView
        android:id="@+id/about_fragment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="About the Developer"
        android:textColor="@color/home_buttonText_grey"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Hi! My name is Claire Shoemaker and I'm a junior at Abington Heights High School. If you have any questions and/or critiques about the Physics Calculator, feel free to contact me below."
        android:textColor="@color/home_buttonText_grey"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/about_fragment_textView"
        app:layout_constraintStart_toStartOf="@+id/about_fragment_textView"
        app:layout_constraintTop_toBottomOf="@+id/about_fragment_textView"/>

    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="call"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="website"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/call_button"
        app:layout_constraintEnd_toStartOf="@+id/location_button"
        app:layout_constraintStart_toEndOf="@+id/call_button" />

    <Button
        android:id="@+id/location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="location"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/website_button" />

</androidx.constraintlayout.widget.ConstraintLayout>